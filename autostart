# Hide mouse cursor after 1s
unclutter -idle 1 &

# Keep display awake
xset -dpms
xset s off

# Read target URL
URL_FILE="/var/lib/kiosk/url.txt"
URL="$(cat "$URL_FILE" 2>/dev/null || echo http://192.168.50.201:5010)"

# Launch Chromium in kiosk
chromium-browser \
  --kiosk "$URL" \
  --noerrdialogs \
  --disable-translate \
  --disable-features=TranslateUI \
  --autoplay-policy=no-user-gesture-required \
  --check-for-update-interval=31536000 \
  --incognito \
  --test-type \
  --no-first-run